<h2><%= @user.name %></h2>
<p><small>Joined on: <%= @user.created_at.strftime("%B %-d, %Y") %></small></p>
<br>
<h3>Current To-Do items:</h3>
<div class="item-list">
	<% @items.each do |item| %>
		<%= render item %>
	<% end %>
</div>
<br>
<% if current_user == @user %>
	<h3>Add New Items:</h3>
	<div class="to-do-list">
		<%= form_for @item, url: [current_user, @item] do |f| %>
			<% 3.times do |n| %>
				<%= render partial: "items/form", locals: { f: f, n: n } %>
			<% end %>
			<br>
			<%= f.submit "Create New To-Do Item(s)", class: "btn btn-success" %>
		<% end %>
	</div>
<% end %>